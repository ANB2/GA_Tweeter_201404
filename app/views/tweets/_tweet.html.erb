<div class = 'tweet panel panel-default' >
  <div class = 'panel-body'>
    <%= image_tag tweet.user.gravatar_url, class: 'pull-left' %>
    <p><%= tweet.body %></p>
    <span class= 'text-muted'><%= link_to tweet.user.email, tweet.user %></span>
    <span class= 'text-muted'><%= link_to_unless_current "#{time_ago_in_words (tweet.created_at)} ago", tweet %></span>
  </div>

</div>